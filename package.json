{
  "name": "tweetsphere",
  "version": "1.0.0",
  "description": "A fullstack Twitter-like (or X-like), feature-rich Typescript application",
  "main": "dist/server",
  "types": "dist/server",
  "type": "module",
  "scripts": {
    "start": "nodemon",
    "migration:generate": "drizzle-kit generate:pg --schema=./src/models",
    "migration:push": "ts-node-esm -r esbuild-register src/config/migrate.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wisieneu/TweetSphere.git"
  },
  "author": "Bartłomiej Wiśniewski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Wisieneu/TweetSphere/issues"
  },
  "homepage": "https://github.com/Wisieneu/TweetSphere#readme",
  "dependencies": {
    "@types/morgan": "^1.9.4",
    "@types/pg": "^8.10.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.2",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pg": "^8.11.2",
    "postgres": "^3.3.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.5.0",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "drizzle-kit": "^0.19.12",
    "eslint": "^8.47.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
