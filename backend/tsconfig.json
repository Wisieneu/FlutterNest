{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["src/utils/types.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
